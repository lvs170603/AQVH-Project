{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App",
            "program": "${workspaceFolder}/${input:entryFile}",
            "runtimeArgs": [
                "run"
            ],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "entryFile",
            "description": "Enter the relative path to your app's entry file (e.g., src/app/page.tsx)"
        }
    ]
}